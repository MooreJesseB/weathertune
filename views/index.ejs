<%  include partials/header.ejs %>
<br>
<br>
<br>
  <p class="lead navtext">Create a music playlist based on current local weather conditions</p>
  <p><span class="supertiny navtext">- requires Spotify</span></p><br>
  <% if (sessionFlash && sessionFlash.failure) { %>
    <div class="col-xs-3"></div>
    <% sessionFlash.failure.forEach(function(message) { %>
      <div class="col-xs-6 alert alert-danger text-center col-xs" role="alert"><%= message %></div>
    <% }); %>
  <% } %>
  <div class='container narrow'>

    <form method="post" action="login" role="form">
      <h5 class="signin">Please sign in</h5><br>  
      <input type="text" class="form-control signin" placeholder="Username" name="username" required autofocus>
      <input type="password" class="form-control signin" placeholder="Password" name="password" required>
      <button class="signin btn btn-lrg btn-primary btn-block narrow text-center" type="submit">Sign in</button>    
    </form><br>
    <a href="signup"><p class="signin">Not a member? Sign up here!</p></a>
  </div>
  
 
